{
  "name": "spelling-bee-game",
  "version": "1.0.0",
  "description": "A comprehensive, classroom-ready spelling bee game with rich educational content and advanced features",
  "private": true,
  "main": "index.html",
  "homepage": "https://squidgyg.github.io/spelling-bee-game/",
  "scripts": {
    "start": "npx serve dist",
    "serve": "npx serve dist",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./tailwind.css --minify",
    "build": "PUBLIC_URL=/spelling-bee-game/ npm run build:css && GITHUB_TOKEN=$GITHUB_TOKEN npx esbuild src/spelling-bee-game.tsx --bundle --outfile=dist/app.js --jsx=automatic --target=es2020 --format=esm --resolve-extensions=.ts,.tsx,.js,.jsx --loader:.mp3=file --loader:.svg=file --loader:.png=file --loader:.jpg=file --loader:.jpeg=file --define:process.env.NODE_ENV=\"'production'\" --define:process.env.PUBLIC_URL=\"'/spelling-bee-game/'\" --define:process.env.GITHUB_TOKEN=\"'$GITHUB_TOKEN'\" && node scripts/copy-assets.js && node scripts/copy-wordlist.js",
    "watch": "npx esbuild src/spelling-bee-game.tsx --bundle --outfile=dist/app.js --jsx=automatic --watch",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:report": "playwright show-report",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "dev:wordlist": "tsc scripts/ai-wordlist.ts --esModuleInterop --resolveJsonModule --module commonjs --target es2020 --outDir scripts && node scripts/ai-wordlist.js",
    "postbuild": "node postbuild.js",
    "dev:curriculum": "tsc api/curriculumWordService.ts --outDir api && node api/curriculumWordService.js",
    "generate:audio": "ts-node scripts/generate-audio.ts",
    "generate:sfx": "ts-node scripts/generate-sfx.ts",
    "generate:all-audio": "npm run generate:sfx && npm run generate:audio",
    "generate:wordlist": "ts-node scripts/generate-ai-wordlist.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SquidgyG/spelling-bee-game.git"
  },
  "keywords": [
    "education",
    "spelling",
    "game",
    "learning",
    "vocabulary",
    "classroom",
    "elementary",
    "middle-school",
    "interactive"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SquidgyG/spelling-bee-game/issues"
  },
  "dependencies": {
    "@types/howler": "^2.2.12",
    "@types/js-yaml": "^4.0.5",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.3.2",
    "framer-motion": "^10.16.4",
    "fs-extra": "^11.3.1",
    "howler": "^2.2.4",
    "lucide-react": "^0.460.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/pdfjs-dist": "^2.10.377",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "dotenv": "^16.0.0",
    "elevenlabs": "^1.59.0",
    "esbuild": "^0.25.9",
    "gh-pages": "^6.3.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "openai": "^4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
      "^.+\\.(mp3)$": "<rootDir>/tests/audioTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(mp3)$": "<rootDir>/src/__mocks__/audioFiles.ts"
    }
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14"
  }
}
