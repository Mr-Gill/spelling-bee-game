{
  "name": "spelling-bee-game",
  "version": "1.0.0",
  "description": "A comprehensive, classroom-ready spelling bee game with rich educational content and advanced features",
  "private": true,
  "main": "index.html",
  "homepage": "https://mr-gill.github.io/spelling-bee-game/",
  "scripts": {
    "start": "npx serve dist -p 5000",
    "serve": "npx serve dist -p 5000",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./tailwind.css --minify",
    "build": "node build.js",
    "build:fast": "NODE_ENV=production node build.js --no-minify",
    "watch": "npx esbuild src/spelling-bee-game.tsx --bundle --outfile=dist/app.js --jsx=automatic --watch",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node --test tests/history.test.js tests/parseWordList.test.js tests/helpShop.test.js tests/useTimer.test.js tests/achievement.test.js tests/BeeCard.test.js",
    "test:unit:fast": "node --test --test-concurrency=4 tests/history.test.js tests/parseWordList.test.js tests/helpShop.test.js",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:install": "npx playwright install --with-deps && npm run test:e2e",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:report": "playwright show-report",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "dev:wordlist": "tsc scripts/ai-wordlist.ts --esModuleInterop --resolveJsonModule --module commonjs --target es2020 --outDir scripts && node scripts/ai-wordlist.js",
    "postbuild": "node postbuild.js",
    "dev:curriculum": "tsc api/curriculumWordService.ts --outDir api && node api/curriculumWordService.js",
    "generate:audio": "ts-node scripts/generate-audio.ts",
    "generate:sfx": "ts-node scripts/generate-sfx.ts",
    "generate:all-audio": "npm run generate:sfx && npm run generate:audio",
    "generate:wordlist": "ts-node scripts/generate-ai-wordlist.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mr-Gill/spelling-bee-game.git"
  },
  "keywords": [
    "education",
    "spelling",
    "game",
    "learning",
    "vocabulary",
    "classroom",
    "elementary",
    "middle-school",
    "interactive"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mr-Gill/spelling-bee-game/issues"
  },
  "dependencies": {
    "@types/howler": "^2.2.12",
    "@types/js-yaml": "^4.0.5",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.3.2",
    "framer-motion": "^10.16.4",
    "fs-extra": "^11.3.1",
    "howler": "^2.2.4",
    "lucide-react": "^0.460.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2",
    "svgo": "^2.8.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/pdfjs-dist": "^2.10.377",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "dotenv": "^16.0.0",
    "elevenlabs": "^1.59.0",
    "esbuild": "^0.25.9",
    "gh-pages": "^6.3.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "openai": "^4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "react-scripts": "^5.0.1",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
      "^.+\\.(mp3)$": "<rootDir>/tests/audioTransformer.js"
    },
    "moduleNameMapper": {
      "\\.(mp3)$": "<rootDir>/src/__mocks__/audioFiles.ts"
    }
  },
  "browserslist": {
    "production": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 safari versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
