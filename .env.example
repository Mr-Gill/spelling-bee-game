# OpenAI API Key (required for word list generation)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Token for GitHub Models API (required for AI word list generation)
# Get your token from: https://github.com/settings/tokens
# Requires "models: read" permission
GITHUB_TOKEN=your_github_token_here
GITHUB_MODELS_TOKEN=your_github_token_here

# ElevenLabs API Key (for audio generation)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Audio Generation Settings
AUDIO_OUTPUT_DIR=public/audio
AUDIO_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Rachel's voice - clear and friendly

# Logging
# Set LOG_LEVEL to control verbosity: debug, info, warn, error
LOG_LEVEL=info
